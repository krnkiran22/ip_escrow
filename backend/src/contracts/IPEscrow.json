{
  "contractName": "IPEscrow",
  "abi": [
    {
      "type": "constructor",
      "inputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "projectCount",
      "inputs": [],
      "outputs": [{"type": "uint256", "name": ""}],
      "stateMutability": "view"
    },
    {
      "type": "function",
      "name": "createProject",
      "inputs": [
        {"name": "_title", "type": "string"},
        {"name": "_milestoneAmounts", "type": "uint256[]"},
        {"name": "_ipfsHash", "type": "string"}
      ],
      "outputs": [{"type": "uint256", "name": "projectId"}],
      "stateMutability": "payable"
    },
    {
      "type": "function",
      "name": "approveCollaborator",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_collaborator", "type": "address"}
      ],
      "outputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "submitMilestone",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_milestoneIndex", "type": "uint256"},
        {"name": "_ipfsHash", "type": "string"}
      ],
      "outputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "approveMilestone",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_milestoneIndex", "type": "uint256"}
      ],
      "outputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "rejectMilestone",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_milestoneIndex", "type": "uint256"},
        {"name": "_reason", "type": "string"}
      ],
      "outputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "raiseDispute",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_reason", "type": "string"},
        {"name": "_evidenceHash", "type": "string"}
      ],
      "outputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "resolveDispute",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_favorCreator", "type": "bool"}
      ],
      "outputs": [],
      "stateMutability": "nonpayable"
    },
    {
      "type": "function",
      "name": "getProject",
      "inputs": [{"name": "_projectId", "type": "uint256"}],
      "outputs": [
        {"name": "creator", "type": "address"},
        {"name": "collaborator", "type": "address"},
        {"name": "title", "type": "string"},
        {"name": "totalBudget", "type": "uint256"},
        {"name": "remainingBudget", "type": "uint256"},
        {"name": "status", "type": "uint8"},
        {"name": "ipfsHash", "type": "string"},
        {"name": "milestoneCount", "type": "uint256"}
      ],
      "stateMutability": "view"
    },
    {
      "type": "function",
      "name": "getMilestone",
      "inputs": [
        {"name": "_projectId", "type": "uint256"},
        {"name": "_milestoneIndex", "type": "uint256"}
      ],
      "outputs": [
        {"name": "amount", "type": "uint256"},
        {"name": "status", "type": "uint8"},
        {"name": "ipfsHash", "type": "string"},
        {"name": "submittedAt", "type": "uint256"},
        {"name": "approvedAt", "type": "uint256"}
      ],
      "stateMutability": "view"
    },
    {
      "type": "function",
      "name": "getProjectsByCreator",
      "inputs": [{"name": "_creator", "type": "address"}],
      "outputs": [{"name": "", "type": "uint256[]"}],
      "stateMutability": "view"
    },
    {
      "type": "event",
      "name": "ProjectCreated",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": true, "name": "creator", "type": "address"},
        {"indexed": false, "name": "totalBudget", "type": "uint256"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "CollaboratorApproved",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": true, "name": "collaborator", "type": "address"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "MilestoneSubmitted",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": false, "name": "milestoneIndex", "type": "uint256"},
        {"indexed": false, "name": "ipfsHash", "type": "string"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "MilestoneApproved",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": false, "name": "milestoneIndex", "type": "uint256"},
        {"indexed": false, "name": "amount", "type": "uint256"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "MilestoneRejected",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": false, "name": "milestoneIndex", "type": "uint256"},
        {"indexed": false, "name": "reason", "type": "string"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "PaymentReleased",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": true, "name": "recipient", "type": "address"},
        {"indexed": false, "name": "amount", "type": "uint256"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "DisputeRaised",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": false, "name": "reason", "type": "string"}
      ],
      "anonymous": false
    },
    {
      "type": "event",
      "name": "DisputeResolved",
      "inputs": [
        {"indexed": true, "name": "projectId", "type": "uint256"},
        {"indexed": false, "name": "favorCreator", "type": "bool"}
      ],
      "anonymous": false
    }
  ]
}
